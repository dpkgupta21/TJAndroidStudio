<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="@drawable/banner3"
        android:padding="10dp">

        <com.traveljar.memories.customviews.MyCircularImageView
            android:id="@+id/sidemenu_profile_pic"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/abhi" />

        <com.traveljar.memories.customviews.MyTextViewBodyMed14
            android:id="@+id/sidemenu_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/sidemenu_profile_pic"
            android:text="Anonymous"
            android:textColor="@color/white" />

        <com.traveljar.memories.customviews.MyTextViewBodyReg14
            android:id="@+id/sidemenu_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/sidemenu_username"
            android:layout_below="@id/sidemenu_username"
            android:text="Update your status here"
            android:textColor="@color/white" />

        <ImageButton
            android:id="@+id/sidemenu_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/sidemenu_profile_pic"
            android:background="@color/transparent"
            android:contentDescription="@string/default_string"
            android:src="@drawable/ic_settings_black_24dp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/sidemenu_features_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/white"
        android:layout_marginTop="8dp"
        android:dividerHeight="1dp"
        android:drawSelectorOnTop="true"/>

    <!-- Horizontal line in sidebar to divide -->

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/tj_gray_border" />

</LinearLayout>