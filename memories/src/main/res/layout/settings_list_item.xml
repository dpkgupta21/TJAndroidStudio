<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="5sp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/landingSettingsIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="10sp"/>

    <com.traveljar.memories.customviews.MyTextViewBodyReg
        android:id="@+id/landingSettingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_alignTop="@+id/landingSettingsIcon"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/landingSettingsIcon"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="16sp" />

</RelativeLayout>