<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.traveljar.memories.customviews.MyTextViewCustom
            android:id="@+id/galleryNoteItemBigDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05"
            android:textSize="28sp"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/tj_medium_gray" />

        <com.traveljar.memories.customviews.MyTextViewCustom
            android:id="@+id/galleryNoteItemDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MON"
            android:textSize="20sp"/>

    </LinearLayout>

    <com.traveljar.memories.customviews.MyTextViewBodyReg
        android:id="@+id/galleryNoteItemtext"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:ellipsize="marquee"
        android:text="@string/gallery_note_default_text"
        android:textSize="16sp" />

</LinearLayout>