<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/splash_screen_footer"/>

    <LinearLayout
        android:id="@+id/splash_screen_footer"
        style="@android:style/ButtonBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="#AB0007"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <com.example.memories.customviews.MyButtonView
            android:id="@+id/splash_signup_btn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#AB0007"
            android:onClick="goToSignUp"
            android:text="I&apos;m New"

            android:textColor="@color/white" />

        <com.example.memories.customviews.MyButtonView
            android:id="@+id/splash_signin_btn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#AB0007"
            android:onClick="goToSignIn"
            android:text="Sign In"
            android:textColor="@color/white" />
    </LinearLayout>

<!--    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/splash_screen_footer"
        android:layout_centerHorizontal="true"></RadioGroup>-->

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/swipe_indicator_radio_group"
        android:gravity="center_horizontal"
        android:layout_above="@+id/splash_screen_footer"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <RadioButton
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:button="@null"
            android:layout_margin="5dp"
            android:background="@drawable/splash_screen_custom_radio_buttons"
            android:id="@+id/pic1_indicator"/>

        <RadioButton
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:button="@null"
            android:layout_margin="5dp"
            android:background="@drawable/splash_screen_custom_radio_buttons"
            android:id="@+id/pic2_indicator" />

        <RadioButton
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:button="@null"
            android:layout_margin="5dp"
            android:background="@drawable/splash_screen_custom_radio_buttons"
            android:id="@+id/pic3_indicator"/>

    </RadioGroup>


</RelativeLayout>