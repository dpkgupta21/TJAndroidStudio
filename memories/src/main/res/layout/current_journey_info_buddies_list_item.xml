<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white"
    android:padding="0dp">

    <com.traveljar.memories.customviews.MyCircularImageView
        android:id="@+id/cur_journey_buddies_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/gumnaam_profile_image" />

    <com.traveljar.memories.customviews.MyTextViewMed14
        android:id="@+id/cur_journey_buddies_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/cur_journey_buddies_image"
        android:text="Abhinav Mittal"
        android:textColor="@color/black"/>

    <com.traveljar.memories.customviews.MyTextViewReg14
        android:id="@+id/cur_journey_buddies_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/cur_journey_buddies_image"
        android:paddingBottom="20dp"
        android:text="And miles to go before I sleep..." />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/journey_info_buddies_remove"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_close_black_24dp"
 />

    <TextView
        android:id="@+id/journey_info_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin"
        android:visibility="gone"
        android:textColor="@color/tj_green"
        android:layout_alignTop="@+id/cur_journey_buddies_image"
        android:layout_toRightOf="@+id/cur_journey_buddies_name"
        android:layout_toEndOf="@+id/cur_journey_buddies_name"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
