<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gallery_photos_rel_layout"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:background="@drawable/pictures_stack"
    android:paddingLeft="25dp"
    android:paddingRight="15dp"
    android:paddingBottom="25dp"
    android:paddingTop="35dp">

    <ImageView
        android:id="@+id/album_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/default_string"
        android:scaleType="centerCrop"
        android:src="@drawable/gumnaam_profile_image" />

    <com.traveljar.memories.customviews.MyTextViewReg14
        android:id="@+id/album_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Journey Name Journey NameJourney NameJourney NameJourney Name"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#CC000000"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_alignBottom="@+id/album_img"
        android:layout_alignRight="@+id/album_img"
        android:layout_alignEnd="@+id/album_img" />

    <com.traveljar.memories.customviews.MyTextViewCustom
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="35sp"
        android:layout_marginRight="10dp"
        android:id="@+id/no_items"
        android:textColor="@color/white"
        android:layout_alignTop="@id/album_img"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />


</RelativeLayout>