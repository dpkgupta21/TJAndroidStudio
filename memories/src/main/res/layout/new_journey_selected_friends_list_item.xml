<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="10dp">

    <com.traveljar.memories.customviews.MyCircularImageView
        android:id="@+id/add_friends_contact_image"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/abhi" />

    <com.traveljar.memories.customviews.MyTextView
        android:id="@+id/add_friends_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/add_friends_contact_image"
        android:layout_alignParentTop="@id/add_friends_contact_image"
        android:layout_marginTop="10dp"
        android:text="Content not available"
        android:textSize="@dimen/tj_medium_font" />

    <ImageButton
        android:id="@+id/add_friends_contact_remove_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/delete85"
        android:contentDescription="@string/default_string"
        android:text="Content not available" />

    <TextView
        android:id="@+id/add_friends_contact_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Info"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/tj_medium_font"
        android:layout_below="@+id/add_friends_contact_name"
        android:layout_toRightOf="@+id/add_friends_contact_image"
        android:layout_toEndOf="@+id/add_friends_contact_image" />

</RelativeLayout>