<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <com.traveljar.memories.customviews.MyCircularImageView
        android:id="@+id/all_contacts_contact_image"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/gumnaam_profile_image" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/all_contacts_contact_image">

        <com.traveljar.memories.customviews.MyTextViewBodyReg
            android:id="@+id/all_contacts_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Content not available"
            android:textSize="@dimen/tj_medium_font" />

        <com.traveljar.memories.customviews.MyTextViewSmallText
            android:id="@+id/all_contacts_contact_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/all_contacts_contact_name"
            android:layout_below="@id/all_contacts_contact_name"
            android:text="Content not available"
            android:textSize="@dimen/tj_medium_font" />
    </RelativeLayout>

    <CheckBox
        android:id="@+id/all_contacts_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

</RelativeLayout>