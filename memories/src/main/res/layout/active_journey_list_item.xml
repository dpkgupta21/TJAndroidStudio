<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:background="@color/tj_gray_bg"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_border_gray"
        android:padding="2dp">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/black">

            <ImageView
                android:id="@+id/active_journey_cover_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.6"
                android:scaleType="centerCrop"
                android:src="@drawable/abhi" />

        </FrameLayout>

        <com.traveljar.memories.customviews.MyTextViewBodyReg
            android:id="@+id/active_journey_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:text="Journey Name"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <com.traveljar.memories.customviews.MyTextViewSmallText
            android:id="@+id/active_journey_list_tagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/active_journey_list_name"
            android:text="Journey tagline"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="16sp" />


        <com.traveljar.memories.customviews.MyTextViewBodyReg
            android:id="@+id/active_journey_list_buddy_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:text="Some buddies"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/active_journey_list_buddy_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_toLeftOf="@id/active_journey_list_buddy_count"
            android:src="@drawable/active_journey_buddy" />


        <ImageView
            android:id="@+id/active_journey_list_place_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:src="@drawable/active_journey_location" />

        <com.traveljar.memories.customviews.MyTextViewBodyReg
            android:id="@+id/active_journey_list_buddy_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/active_journey_list_place_icon"
            android:text="Some place"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>

</RelativeLayout>
