<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:background="@color/tj_gray_bg"
    android:padding="10dp">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/md_blue"
        >

        <ImageView
            android:id="@+id/active_journey_cover_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/abhi"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/active_journey_cover_pic_gradient"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/gradient"
            android:scaleType="fitXY" />

    </FrameLayout>

    <TextView
        android:id="@+id/active_journey_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Journey Name"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/active_journey_list_buddy_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="some buddies"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/active_journey_list_buddy_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/add70"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/active_journey_list_buddy_count" />


    <ImageView
        android:id="@+id/active_journey_list_place_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/facebook30"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true" />

    <TextView
        android:id="@+id/active_journey_list_buddy_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/active_journey_list_place_icon"
        android:text="some place"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>
