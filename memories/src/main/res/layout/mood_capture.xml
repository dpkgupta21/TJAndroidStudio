<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <com.example.memories.customviews.MyTextView
        android:id="@+id/noFriendsSelected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />

    <ImageButton
        android:id="@+id/mood_select_friend_imgbtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="selectFriends"
        android:src="@drawable/add70" />

    <com.example.memories.customviews.MyTextView
        android:id="@+id/mood_text_select_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Friend"
        android:textSize="@dimen/tj_medium_font" />

    <com.example.memories.customviews.MyTextView
        android:id="@+id/mood_text_is"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="is"
        android:textColor="@color/tj_medium_gray"
        android:textSize="@dimen/tj_extra_giant_font"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/mood_select_mood_imgbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="selectMood"
        android:src="@drawable/boss" />

    <com.example.memories.customviews.MyTextView
        android:id="@+id/mood_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Excited"
        android:textSize="@dimen/tj_medium_font" />

    <com.example.memories.customviews.MyTextView
        android:id="@+id/mood_text_because_of"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="because of"
        android:textColor="@color/tj_medium_gray"
        android:textSize="@dimen/tj_extra_giant_font"
        android:textStyle="bold" />

    <com.example.memories.customviews.MyEditTextView
        android:id="@+id/mood_because_of_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"/>

</LinearLayout>