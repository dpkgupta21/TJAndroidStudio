<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mood_detail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <com.traveljar.memories.customviews.MyTextViewBodyReg
        android:id="@+id/noFriendsSelected"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />

    <ImageButton
        android:id="@+id/mood_select_friend_imgbtn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:onClick="selectFriends"
        android:src="@drawable/gumnaam_profile_image" />

    <com.traveljar.memories.customviews.MyTextViewBodyReg
        android:id="@+id/mood_text_select_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Friend"
        android:textSize="@dimen/tj_medium_font" />

    <com.traveljar.memories.customviews.MyTextViewCustom
        android:id="@+id/mood_text_is"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="is"
        android:textColor="@color/tj_medium_gray"
        android:textSize="@dimen/tj_extra_giant_font" />

    <ImageButton
        android:id="@+id/mood_select_mood_imgbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="selectMood"
        android:src="@drawable/boss" />

    <com.traveljar.memories.customviews.MyTextViewBodyReg
        android:id="@+id/mood_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Excited"
        android:textSize="@dimen/tj_medium_font" />

    <com.traveljar.memories.customviews.MyTextViewCustom
        android:id="@+id/mood_text_because_of"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="because of"
        android:textColor="@color/tj_medium_gray"
        android:textSize="@dimen/tj_extra_giant_font" />

    <com.traveljar.memories.customviews.MyEditTextView
        android:id="@+id/mood_because_of_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:ems="10" />

</LinearLayout>