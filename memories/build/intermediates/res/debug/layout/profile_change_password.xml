<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <include layout="@layout/toolbar" />

    <com.traveljar.memories.customviews.MyEditTextView
        android:id="@+id/currentPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="5"
        android:hint="Current Password"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:inputType="textPassword"/>

    <com.traveljar.memories.customviews.MyEditTextView
        android:id="@+id/newPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="5"
        android:hint="New Password"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:inputType="textPassword" />

    <com.traveljar.memories.customviews.MyEditTextView
        android:id="@+id/verifyPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="5"
        android:hint="New Password"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:inputType="textPassword" />

    <com.traveljar.memories.customviews.MyButtonView
        android:id="@+id/submitBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#3C72DC"
        android:text="Confirm"
        android:textColor="@color/white" />

</LinearLayout><!-- From: file:/media/ankit/6C4C-C295/traveljar/TJAndroidStudio/memories/src/main/res/layout/profile_change_password.xml -->