<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/gallery_audio_list_item_wave"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/abc_action_bar_home_description"
        android:src="@drawable/audio_wave" />

    <ImageButton
        android:id="@+id/gallery_audio_list_item_play"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:src="@drawable/play_audio_red" />

    <!--<ImageView-->
    <!--android:id="@+id/gallery_audio_list_item_pause"-->
    <!--android:layout_width="40dp"-->
    <!--android:layout_height="40dp"-->
    <!--android:visibility="invisible"-->
    <!--android:layout_centerInParent="true"-->
    <!--android:src="@drawable/pause_audio_red" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gallery_audio_list_item_wave"
        android:background="@color/tj_red_light_text"
        android:padding="1dp">

        <com.example.memories.customviews.MyTextView
            android:id="@+id/gallery_audio_list_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date : 5 May 2014" />

        <com.example.memories.customviews.MyTextView
            android:id="@+id/gallery_audio_list_item_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Duration : 15 sec" />

    </RelativeLayout>

</RelativeLayout>


