<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@color/black"
    android:paddingTop="20dp">

    <com.traveljar.memories.customviews.MyTextViewBodyReg14
        android:id="@+id/imageTitleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ImageName"
        android:textColor="@color/white"
        android:textSize="@dimen/tj_large_font"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp" />

    <ImageView
        android:id="@+id/closeIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/delete85" />

    <ImageView
        android:id="@+id/detailImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageTitleTxt"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Original"
        android:id="@+id/download_audio_btn"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/closeIcon"
        android:visibility="gone"
        android:layout_alignEnd="@+id/closeIcon" />

</RelativeLayout><!-- From: file:/Users/abhi/Documents/TJDev/Android/TJGradle/TJAndroidStudio/memories/src/main/res/layout/gallery_photos_detail_item.xml -->