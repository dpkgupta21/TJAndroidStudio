<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="@drawable/banner3"
        android:padding="10dp">

        <com.traveljar.memories.customviews.MyCircularImageView
            android:id="@+id/sidemenu_profile_pic"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/abhi" />

        <com.traveljar.memories.customviews.MyTextViewMed14
            android:id="@+id/sidemenu_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/sidemenu_profile_pic"
            android:text="Anonymous"
            android:textColor="@color/white" />

        <com.traveljar.memories.customviews.MyTextViewReg14
            android:id="@+id/sidemenu_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/sidemenu_username"
            android:layout_below="@id/sidemenu_username"
            android:text="Update your status here"
            android:textColor="@color/white" />

    </RelativeLayout>

    <ListView
        android:id="@+id/sidemenu_features_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/white"
        android:layout_marginTop="8dp"
        android:dividerHeight="1dp"/>

    <!-- Horizontal line in sidebar to divide -->

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/tj_gray_border" />

    <!-- Settings and Other Things-->

    <RelativeLayout
        android:id="@+id/sidemenu_settings"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:clickable="true"
        android:background="@drawable/list_selector">

        <ImageView
            android:id="@+id/side_menu_settings_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/default_string"
            android:src="@drawable/ic_settings_applications_black_24dp" />

        <com.traveljar.memories.customviews.MyTextViewMed14
            android:id="@+id/side_menu_settings_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="72dp"
            android:gravity="center_vertical"
            android:text="Settings"
            android:textColor="@color/black" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/list_selector">

        <ImageView
            android:id="@+id/side_menu_feedback_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/default_string"
            android:src="@drawable/ic_feedback_black_24dp" />

        <com.traveljar.memories.customviews.MyTextViewMed14
            android:id="@+id/side_menu_feedback_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="72dp"
            android:gravity="center_vertical"
            android:text="Send Feedback"
            android:textColor="@color/black" />

    </RelativeLayout>



</LinearLayout><!-- From: file:/media/ankit/6C4C-C295/traveljar/TJAndroidStudio/memories/src/main/res/layout/side_menu_drawer.xml -->