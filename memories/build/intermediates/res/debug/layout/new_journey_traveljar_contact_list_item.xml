<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <com.example.memories.customviews.MyCircularImageView
        android:id="@+id/all_contacts_contact_image"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_profile" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/all_contacts_contact_image">

        <com.example.memories.customviews.MyTextView
            android:id="@+id/all_contacts_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Content not available"
            android:textSize="@dimen/tj_medium_font"
            android:textStyle="bold" />

        <com.example.memories.customviews.MyTextView
            android:id="@+id/all_contacts_contact_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/all_contacts_contact_name"
            android:layout_below="@id/all_contacts_contact_name"
            android:text="Content not available"
            android:textSize="@dimen/tj_medium_font" />
    </RelativeLayout>

    <CheckBox
        android:id="@+id/all_contacts_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

</RelativeLayout><!-- From: file:/media/ankit/6C4C-C295/traveljar/TJAndroidStudio/memories/src/main/res/layout/new_journey_traveljar_contact_list_item.xml -->